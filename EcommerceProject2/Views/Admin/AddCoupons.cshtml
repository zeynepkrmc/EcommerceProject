@model EcommerceProject2.Models.Coupons
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";

    ViewBag.Title = "AddCoupons";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Coupons</title>
    <style>
        Body {
            font-family: Calibri, Helvetica, sans-serif;
            background-color: #D3DEEE;
        }

        button {
            background-color: #4CAF50;
            width: 100%;
            color: orange;
            padding: 15px;
            margin: 10px 0px;
            border: none;
            cursor: pointer;
        }

        form {
            border: 3px solid #000203;
        }

        input[type=text], input[type=password] {
            width: 100%;
            margin: 8px 0;
            padding: 12px 20px;
            display: inline-block;
            border: 2px solid black;
            box-sizing: border-box;
        }

        button:hover {
            opacity: 0.7;
        }



        .tbl {
            margin-right: 150px;
        }


        .container {
            padding: 25px;
            background-color: #F9F9F9;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("AddCoupons", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <form>
            <div style="margin-bottom:295px">
                <h1 style="text-align:center"> Add Coupons </h1>
                <br>
                <center>
                    <table class="tbl">
                        <tr>
                            <th style="width:40%">
                                <label style="font-size:16px">Coupon Code : </label>
                            </th>

                            <td>
                                @Html.TextBoxFor(x => x.Coupon_Code, new { @class = "form", @placeholder = "Coupons Code" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(x => x.Coupon_Code, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <label style="font-size:16px">Coupon Discount :</label>
                            </th>
                            <td>
                                @Html.TextBoxFor(x => x.Discount, new { @class = "form", @placeholder = "Write here the coupon discount Amount" })
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <label style="font-size:16px">Is Active : </label>
                            </th>
                            <td>
                                @Html.DropDownListFor(x => x.IsActive, new SelectList(new List<SelectListItem>
                                                {
                                                    new SelectListItem { Text = "True", Value = "true" },
                                                    new SelectListItem { Text = "False", Value = "false" }
                                                }, "Value", "Text"), "--Select--", new { @class = "form-control" })
                            </td>
                        </tr>

                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" id="button" value="Add" class="btn btn-primary" />
                            </td>
                        </tr>
                    </table>
                </center>
            </div>




        </form>
    }
</body>
</html>



